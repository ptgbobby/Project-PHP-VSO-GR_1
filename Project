<?php

function is_si_stebbins_deck($all_cards){

    $deck_of_Cards = explode(" ", $all_cards);
    $not_card_true = 1;
    $no_power = null;
    $no_suit = null;
    $card = [];


    for ($i = 0; $i < count($deck_of_Cards); $i++){


        $card = $deck_of_Cards[$i];
        $power = getPower($card);
        $suit = substr($card, -1);


        if ($i == 0){
            $no_power = $power;
            $no_suit = $suit;
        }



        if ($power != $no_power || strcmp($suit, $no_suit) != 1){
            $not_card_true += $i;
            break;
        }


        $no_power = getNextPower($power);
        $no_suit = getNextSuit($suit);
    }

    echo $not_card_true;
}



function getPower($card){

    $power = substr($card, 0, strlen($card) - 1);
    switch ($power) {
        case "A":
            return 1;// Ð = 1
        case "J":
            return 11;//J = 11
        case "Q":
            return 12;//Q = 12
        case "K":
            return 13;//K = 13
        default:
            return (int)$power;
    }
}



function next_suit($suit){

    switch ($suit) {
        case "C":
            return "H";
        case "H":
            return "S";
        case "S":
            return "D";
        default:
            return "C";
    }
}

function next_power($power){

    switch ($power) {
        case "11":
            return 1;
        case "12":
            return 2;
        case "13":
            return 3;
        default:
            return $power + 3;
    }
}



is_si_stebbins_deck("4S 7D 10C KH 2S 6D 9C QH 3S 5D");


?>
